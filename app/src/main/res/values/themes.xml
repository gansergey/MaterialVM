<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Material" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. (view background)-->
        <item name="colorPrimary">@color/light_green</item>
        <!-- Status bar background -->
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/light_green</item>
        <!-- Status bar text -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="cardViewMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/card_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_margin</item>
        <item name="android:layout_marginTop">@dimen/card_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_margin</item>
        <item name="cardBackgroundColor">@color/light_background_card_view</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="strokeColor">@color/dark_border</item>
        <item name="strokeWidth">@dimen/card_border_width</item>
        <item name="cardElevation">@dimen/card_shadow_size</item>
    </style>

    <style name="linearVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background_app</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="linearVerticalInCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="cardViewRound">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/card_view_round_padding</item>
        <item name="android:layout_marginBottom">@dimen/card_view_round_padding</item>
        <item name="android:layout_marginStart">@dimen/card_view_round_padding</item>
        <item name="android:layout_marginEnd">@dimen/card_view_round_padding</item>
        <item name="cardBackgroundColor">@color/light_background_main</item>
        <item name="cardCornerRadius">@dimen/card_view_round_radius</item>
        <item name="cardElevation">@dimen/card_view_round_shadow_size</item>
        <item name="strokeColor">@color/light_card_view_round_border_color</item>
        <item name="strokeWidth">@dimen/card_view_round_border_size</item>

    </style>

    <style name="text_input_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/card_view_round_padding</item>
        <item name="android:layout_marginEnd">@dimen/card_view_round_padding</item>

        <item name="android:padding">@dimen/text_input_layout_padding</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_layout_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_layout_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_layout_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_layout_radius</item>

        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="strokeWidth">@dimen/border_size</item>

    </style>

    <style name="textViewBig">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/text_view_big</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/light_title_big_text</item>
        <item name="android:textSize">@dimen/text_view_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="image_view_for_round_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/photo_of_the_day_stub</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="image_view_for_view_pager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/image_view_for_view_pager_margin</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="chipGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/chip_group_padding</item>
    </style>

    <style name="chipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/bg_chip_state_text_color</item>
        <item name="chipBackgroundColor">@drawable/bg_chip_state_background</item>
    </style>

    <style name="frameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background_app</item>
    </style>

    <style name="textViewSmallPlus">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/text_view_small_margin_top</item>
        <item name="android:textColor">@color/light_title_small_text</item>
        <item name="android:textSize">@dimen/text_view_small_plus</item>
    </style>

    <style name="textViewSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/text_view_small_margin</item>
        <item name="android:layout_marginTop">@dimen/text_view_small_margin_top</item>
        <item name="android:textColor">@color/light_title_small_text</item>
        <item name="android:textSize">@dimen/text_view_small</item>
    </style>

    <style name="circularProgressIndicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/progress_margin_top</item>
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/light_green</item>
        <item name="trackColor">@color/light_title_small_text</item>
    </style>

    <style name="view">
        <item name="android:layout_width">@dimen/view_width</item>
        <item name="android:layout_height">@dimen/view_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/view_margin_top</item>
        <item name="android:background">@color/light_title_big_text</item>
    </style>

    <style name="linearBottomsheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/light_background_main</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="imageLogo">
        <item name="android:layout_width">@dimen/image_view_logo_loading</item>
        <item name="android:layout_height">@dimen/image_view_logo_loading</item>
        <item name="android:contentDescription">@string/space_nasa_app</item>
        <item name="android:layout_gravity">center</item>
        <item name="srcCompat">@drawable/ic_nasa_png_logo_light</item>
    </style>

    <style name="Theme.Material.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FrameBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background_app</item>
    </style>

    <style name="Theme.Material.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Material.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>